<div class="nav-wrapper">
  <div class="nav-box">
    <nav class="top-bar">
      <%= render 'layouts/top-bar' %>
    </nav>
    <div class="sidebar">
      <%= render 'layouts/side-bar' %>
    </div>
    <div class="jobs-area">
      <h1 class="page-title">Job Basket</h1>
      <%= link_to '<i class="foundicon-trash icon-medium"></i>'.html_safe, jobs_empty_basket_path, method: :post, data: { confirm: 'Delete all jobs?' } %>
      <%= link_to '<i class="foundicon-plus icon-medium"></i>'.html_safe, "#" %>
      <table class="jobs-table">
        <% @jobs.each do |job| %>
            <tr>
              <td width="250"><%= link_to job.name, job %></td>
              <td width="50"><%= link_to 'Edit', edit_job_path(job) %></td>
              <td width="50"><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
      </table>
      <br />
    </div>
    <div class="new-job">
      <%= render 'form' %>
    </div>
  </div>
</div>

