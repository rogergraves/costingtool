<div class="login-wrapper">
  <div class="login-fields">
    <h3 class="subheader">Sign up</h3>

    <%= semantic_form_for(resource, :as => resource_name, :url => user_registration_path(resource)) do |f| %>
        <% if resource.errors[:email].present? %>
              <% resource.errors.full_messages.each do |msg| %>
                  <p class="alert label"><%= msg %></p>
              <% end %>
        <% end %>
      <div><%= f.email_field :email, :placeholder => "Email", :autofocus => true %></div>

      <div><%= f.submit "Sign up", :class => "login-button medium button radius expand" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
