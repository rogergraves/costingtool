<div class="login-wrapper">
  <div class="login-fields">

    <h3 class="subheader">You're almost done!</h3>

    <%= form_for(resource, :as => resource_name, :url => confirm_path, :html => { :class => "custom" }) do |f| %>
        <% if resource.errors.present? %>
            <% resource.errors.full_messages.each do |msg| %>
                <% if msg == "Password is too short (minimum is 6 characters)" %>
                    <p class="alert label"><%= "Minimum password length is 6 characters" %></p>
                <% else %>
                    <p class="alert label"><%= msg %></p>
                <% end %>
            <% end %>
        <% end %>
        <div><%= f.password_field :password, :placeholder => "Password" %></div>
        <div><%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %></div>

        <div><%= f.text_field :first_name, :placeholder => "First Name" %></div>
        <div><%= f.text_field :last_name, :placeholder => "Last Name" %></div>
        <div><%= f.text_field :designation, :placeholder => "Designation" %></div>
        <div><%= f.text_field :company, :placeholder => "Company" %></div>
        <div><%= f.text_field :department, :placeholder => "Department/Division" %></div>
        <div>
          <%= custom_select("Country", "user_country", "user[country]", User::COUNTRIES) %>
        </div>
        <div><%= f.text_field :contact_number, :placeholder => "Contact Number" %></div>

        <%= f.hidden_field :confirmation_token %>

        <div><%= f.submit "Confirm Account", :class => "login-button medium button radius expand" %></div>
    <% end %>

  </div>
</div>

