<div class="login-wrapper">
  <div class="login-fields">

    <h3 class="subheader">Resend confirmation instructions</h3>

    <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
        <% if resource.errors[:email].present? %>
            <% resource.errors.full_messages.each do |msg| %>
                <p class="alert label"><%= msg %></p>
            <% end %>
        <% end %>

      <div><%= f.email_field :email, :autofocus => true, :placeholder => "Email" %></div>

      <div><%= f.submit "Resend confirmation instructions", :class => "login-button medium button radius expand" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>