<div class="login-wrapper">
  <div class="login-fields">
    <h3 class="subheader">Forgot your password?</h3>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

        <div><%= f.email_field :email, :placeholder => "Email", :autofocus => true %></div>

      <div><%= f.submit "Send reset instructions", :class => "login-button medium button radius expand" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


