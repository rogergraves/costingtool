<div class="login-wrapper">
  <%= image_tag("hp_logo_small.png", :class => "hp_logo") %>
  <div class="login-fields">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert label" if msg.is_a?(String) %>
    <% end %>
    <br />
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><% f.label :email %>
          <%= f.email_field :email, :placeholder => "Email", :autofocus => true %></div>

        <div><% f.label :password %>
          <%= f.password_field :password, :placeholder => "Password" %></div>
        <div><%= f.submit "Log in", :class => "login-button medium button radius expand" %></div>

  <% end %>

