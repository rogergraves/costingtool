<div class="nav-wrapper">
  <div class="nav-box">
    <nav class="top-bar">
      <%= render 'layouts/top-bar' %>
    </nav>
    <div class="press_jobs-area">
      <div class="completion-steps">
        <%= render 'layouts/steps' %>
      </div>
      <h3 class="page-title">Select a press</h3>
      <form class="custom press-jobs-table">

		<table class="icon-select-press">
		  <% @presses.each do |press| %>
				  <td class="press-checkbox" id=<%= press.id %>> <%= image_tag ("#{press.icon.url(:medium)}") %>
					<br>
				  <%= press.name %>
				  </td>
			  <!--<input type="image" id="select-me-icon">-->
			  <!--<span class="completion-steps"></span>-->
			<!--</label>-->
		<% end %>
		</table>
      </form>
      <br />
    </div>
    <div class="progress-arrows">
      <div class="next-page press-selection">
        <%= link_to '<i class="foundicon-right-arrow icon-medium next-arrow press-cost-summary"></i>'.html_safe, "#" %>
        <p class="next-text"> Continue </p>
      </div>
      <div class="previous-page">
        <%= link_to '<i class="foundicon-left-arrow icon-medium back-arrow"></i>'.html_safe, jobs_path %>
        <p class="back-text"> Back </p>
      </div>
      </div>
    </div>
  </div>
<!--</div>-->


<script language="javascript">
    window.presses = <%=raw current_user.presses.to_json %>;
    window.presses = window.presses.match(/\d+/g)
</script>
